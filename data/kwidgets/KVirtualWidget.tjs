      var a, b, c, d, e, f;
      a = A * -0.5 + C * -0.5 + E;
      b = B * -0.5 + D * -0.5 + F;
      c = A * (swidth - 0.5) + C * -0.5 + E;
      d = B * (swidth - 0.5) + D * -0.5 + F;
      e = A * -0.5 + C * (sheight - 0.5) + E;
      f = B * -0.5 + D * (sheight - 0.5) + F;
      A = a, B = b, C = c, D = d, E = e, F = f;
    }
    return _canvas.drawImageAffine(src, sleft, stop, swidth, sheight, false, A, B, C, D, E, F);
  }

