function blendColor(c1, c2) {
  var a = (((c1 >> 24) & 0xff) + ((c2 >> 24) & 0xff)) >> 1;
  var r = (((c1 >> 16) & 0xff) + ((c2 >> 16) & 0xff)) >> 1;
  var g = (((c1 >> 8) & 0xff) + ((c2 >> 8) & 0xff)) >> 1;
  var b = (((c1 >> 0) & 0xff) + ((c2 >> 0) & 0xff)) >> 1;
  return (a << 24) | (r << 16) | (g << 8) | (b << 0);
}

