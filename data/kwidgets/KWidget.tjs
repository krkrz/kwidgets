    switch (type) {
    case FRAME_FLATTEN:
      fillFlattenFrame(boxColor);
      break;
    case FRAME_SUNKEN:
      fillSunkenFrame(boxColor);
      break;
    case FRAME_RAISED:
      fillRaisedFrame(boxColor);
      break;
