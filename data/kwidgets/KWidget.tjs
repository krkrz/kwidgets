   * @param boxColor 塗り潰すフレームの地の色
   ------------------------------*/
  function drawFrame(type, x, y, w, h, boxColor = WIN_BG) {
    switch (type) {
    case FRAME_FLATTEN:
      drawFlattenFrame(x, y, w, h, boxColor);
      break;
    case FRAME_SUNKEN:
      drawSunkenFrame(x, y, w, h, boxColor);
      break;
    case FRAME_RAISED:
      drawRaisedFrame(x, y, w, h, boxColor);
      break;
    }
