    // 引数展開
    if (t === void) {
      t = r = b = l;
    } else if (r === void) {
      r = l;
      b = t;
    }

    // 変更があった時のみ処理
    if (_marginLeft == l
        && _marginTop == t
        && _marginRight == r
        && _marginBottom == b)
      return;

    // マージン変更
    invalidateMargin(l, t, r, b);
