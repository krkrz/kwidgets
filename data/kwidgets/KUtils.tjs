// 辞書のキーを配列にして返す
function dictionaryKeys(dict) {
  var array = [], result = [];
  array.assign(dict);
  for (var i = 0; i < array.count; i += 2)
    result.add(array[i]);
  return result;
}

// 辞書の要素を配列にして返す
