// 有効なオブジェを無効化する
function discard(obj) {
  invalidate obj if obj !== void && (obj isvalid);
}

// 配列内のオブジェを全て無効化する
function discardArray(array) {
  var i, num;
  num = array.count;
  for (i = 0; i < num; i++)
    discard(array[i]);
}

// 辞書内のオブジェを全て無効化する
function discardDictionary(hash) {
  var a;
  a = [];
  a.assign(hash);
  var i, num;
  num = a.count;
  for (i = 1; i < num; i+= 2)
    discard(a[i]);
}

